<%= form_with(model: magic_deck) do |form| %>
  <% if magic_deck.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(magic_deck.errors.count, "error") %> prohibited this magic_deck from being saved:</h2>

      <ul>
        <% magic_deck.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Input</h2>
  <div>
    <%= form.text_area :cards, rows: '20', style:'width: 100%;' %>
    <%= form.hidden_field :probabilities %>
  </div>

  <div class="right">
    <%= form.submit :Simulate %>
  </div>

  <% if @played_over_drawed %>
    <h2>play probability if drawed</h2>
    <div class="chart">
      <%= bar_chart @played_over_drawed %>
    </div>
    <h2>play probability</h2>
    <div class="chart">
      <%= bar_chart @played_over_sims %>
    </div>
    <h2>mana curve</h2>
    <div class="chart">
      <%= line_chart @mana_curves %>
    </div>
  <% end %>

<% end %>
